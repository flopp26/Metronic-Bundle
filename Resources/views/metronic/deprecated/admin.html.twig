{% extends 'D2ArmoryMetronicBundle::metronic.html.twig' %}

{% block head %}
    {{ parent() }}

    {% embed 'D2ArmoryMetronicBundle:Zones:head.html.twig' %}
        {% block page_level_plugin_stylesheets %}
            <link href="{{ asset('bundles/d2armorymetronic/global/plugins/bootstrap-daterangepicker/daterangepicker-bs3.css') }}" rel="stylesheet" type="text/css"/>
            <link href="{{ asset('bundles/d2armorymetronic/global/plugins/fullcalendar/fullcalendar/fullcalendar.css') }}" rel="stylesheet" type="text/css"/>
            <link href="{{ asset('bundles/d2armorymetronic/global/plugins/jqvmap/jqvmap/jqvmap.css') }}" rel="stylesheet" type="text/css"/>
        {% endblock %}

        {% block page_stylesheets %}
            <link href="{{ asset('bundles/d2armorymetronic/admin/pages/css/tasks.css') }}" rel="stylesheet" type="text/css"/>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% embed 'D2ArmoryMetronicBundle:Zones:javascripts.html.twig' %}
