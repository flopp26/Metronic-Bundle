            <script src="{{ asset('bundles/d2armorymetronic/global/plugins/jqvmap/jqvmap/maps/jquery.vmap.europe.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/global/plugins/jqvmap/jqvmap/maps/jquery.vmap.germany.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/global/plugins/jqvmap/jqvmap/maps/jquery.vmap.usa.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/global/plugins/jqvmap/jqvmap/data/jquery.vmap.sampledata.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/global/plugins/flot/jquery.flot.min.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/global/plugins/flot/jquery.flot.resize.min.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/global/plugins/flot/jquery.flot.categories.min.js') }}"></script>
