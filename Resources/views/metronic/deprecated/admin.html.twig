            <script src="{{ asset('bundles/d2armorymetronic/global/plugins/jquery-easypiechart/jquery.easypiechart.min.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/global/plugins/jquery.sparkline.min.js') }}"></script>
        {% endblock %}

        {% block page_level_javascripts %}
            <script src="{{ asset('bundles/d2armorymetronic/global/scripts/metronic.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/admin/layout/scripts/layout.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/admin/pages/scripts/index.js') }}"></script>
            <script src="{{ asset('bundles/d2armorymetronic/admin/pages/scripts/tasks.js') }}"></script>
        {% endblock %}
    {% endembed %}

    {% block init_javascripts %}
        <script>
            jQuery(document).ready(function() {
                Metronic.init(); // init metronic core componets
                Layout.init(); // init layout
                Index.init();
//                Index.initDashboardDaterange();
